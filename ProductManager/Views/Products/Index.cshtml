@model IEnumerable<ProductManager.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Lista produktów</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            @using (Html.BeginForm())
            {
                <p>
                    Szukaj w nazwie lub opisie: @Html.TextBox("SearchString")
                    <input type="submit"  value="Szukaj" />
                </p>
            }

            <p>
                @Html.ActionLink("Dodaj nowy produkt", "Create")
            </p>


        </div>
        <div class="span10">
            <table class="table table-hover">
                <tr>
                    <th>

                        @Html.ActionLink(@Html.DisplayNameFor(model => model.ProductName).ToString(), "Index", new { sortOrder = ViewBag.NameSortParm })
                    </th>
                    <th>

                        @Html.ActionLink(@Html.DisplayNameFor(model => model.ProductsDescryption).ToString(), "Index", new { sortOrder = ViewBag.DescrytionSortParm })
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ProductHeight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductWidth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.ActionLink(@Html.DisplayFor(modelItem => item.ProductName).ToString(), "Details", new { id = item.ProductId })

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductsDescryption)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.ProductHeight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductWidth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td>
                            <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-primary btn-xs">
                                    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                                    Edycja
                                </a>
                                <a href="@Url.Action("Details", new { id = item.ProductId })" class="btn btn-warning btn-xs">
                                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                    Szczegóły
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger btn-xs">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    Usuń
                                </a>
                                
                               
                           </div>
</td>
                    </tr>

                }

            </table>

            O co chodzi
        </div>
    </div>
</div>
